<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/category_selector"
    android:paddingHorizontal="@dimen/normal_100"
    android:paddingTop="@dimen/small_100">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:textAppearance="@style/TextAppearance.RestaurantApp.Headline1"
        android:layout_marginVertical="@dimen/small_150"
        android:layout_marginHorizontal="@dimen/normal_100"
        tools:text="Пекарни и кондитерские" />
</FrameLayout>